generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

model User {
  id              String            @id @default(auto()) @map("_id") @field("_id")
  username        String?
  email           String            @unique
  password        String
  paymentAccount  PaymentAccount[]
}

model PaymentAccount {
  id             String   @id @default(auto()) @map("_id") @field("_id")
  user           User     @relation(fields: [userId], references: [id])
  userId         String   @map("_userId")
  accountNumber  String   @unique
  accountName    String
  bankName       String
  expDate        String
}